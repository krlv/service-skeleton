{
    "name": "krlv/slim-demo",
    "description": "Slim Demo Application",
    "license": "MIT",
    "authors": [
        {
            "name": "Eugene Kirillov",
            "email": "eug.krlv@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "slim/slim": "~4.7",
        "slim/psr7": "~1.3",
        "php-di/php-di": "~6.3",
        "middlewares/trailing-slash": "~2.0",
        "middlewares/payload": "~3.0",
        "slim/php-view": "~3.1",
        "doctrine/dbal": "~2.12",
        "monolog/monolog": "~2.2",
        "jms/serializer": "~3.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpstan/phpstan-doctrine": "^0.12",
        "friendsofphp/php-cs-fixer": "^2.18",
        "squizlabs/php_codesniffer": "^3.5",
        "doctrine/coding-standard": "^8.2",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Demo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Demo\\Test\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin/",
        "preferred-install": "dist"
    }
}
