{
    "name": "service-skeleton",
    "description": "Slim Service Skeleton",
    "authors": [
        {
            "name": "Eugene Kirillov",
            "email": "eug.krlv@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/slim": "~3.0",
        "slim/php-view": "~2.0",
        "doctrine/dbal": "~2.5",
        "monolog/monolog": "~1.22"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Skeleton\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Skeleton\\Test\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin/",
        "preferred-install": "dist"
    }
}
